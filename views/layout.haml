%html
  %head
    %title Bloggable

    %link{rel: "stylesheet", href: "/css/bootstrap.min.css"}
    %link{rel: "stylesheet", href: "/css/components.css"}
    %link{rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"}
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'"}
  %body{style: 'padding-top: 70px;'}
    %nav.navbar.navbar-inverse.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          .navbar-brand
            #logo
              Bloggable

    .container
      .col-md-3{ style: "position:fixed" }
        .panel.panel-default
          .panel-body.text-center
            .circular
            = @user.name
            %br
            %em
              = @user.email_address
          .panel-footer.text-center
            %a{href: '/posts/new'} Create New Post
          .panel-footer.text-center
            %a{href: '/'} View All Posts
          .panel-footer.text-center
            %a{href: "/#{ @user.id }/sort/asc"} ASC
            |
            %a{href: "/#{ @user.id }/sort/desc"} DESC
      .col-md-9.col-md-offset-3
        = yield